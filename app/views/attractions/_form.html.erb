<%= form_for [destination, attraction] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :type 'Type of Attraction: '%>
    <%= f.text_field :type %>  

    <%= f.label :recommend %>
    <%= f.check_box :recommend %>  

    <%= f.label :url, 'Website: ' %>
    <%= f.text_field :url %>

    <%= f.label :comments %>
    <%= f.text_area :comments %>  

    <%= f.submit 'Add Attraction' %>

  



<% end %>